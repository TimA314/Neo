<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neo.Views.EventsPage"
             Title="Events">

    <CollectionView ItemsSource="{Binding EventItems}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10" CornerRadius="10" BorderColor="LightGray" HasShadow="True">
                    <StackLayout>
                        <Label Text="{Binding Content}" FontSize="Medium" />
                        <!-- Add other properties of EventDisplayModel you wish to display -->
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
