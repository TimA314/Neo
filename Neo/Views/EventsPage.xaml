<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Neo.ViewModels"
             x:Class="Neo.Views.EventsPage"
             Title="Events">

    <CollectionView ItemsSource="{Binding Notes}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10" CornerRadius="10" BorderColor="LightGray" HasShadow="True">
                    <StackLayout>
                        <Image Source="{Binding ProfileImage}" HeightRequest="50" WidthRequest="50" Aspect="AspectFill" />
                        <Label Text="{Binding DisplayName}" FontSize="Title" TextColor="Gray"/>
                        <Label Text="{Binding AuthorPublicKey}" FontSize="Small" TextColor="Gray"/>
                        
                        <Label Text="{Binding Content}" FontSize="Medium" />

                        <Label Text="{Binding CreatedAt}" FontSize="Small" TextColor="Gray" HorizontalOptions="End"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
