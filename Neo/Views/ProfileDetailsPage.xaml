<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neo.Views.ProfileDetailsPage"
             Title="Profile Details">
    <StackLayout Padding="20">
        <Image Source="{Binding ProfileImage}" Aspect="AspectFill" HeightRequest="100" WidthRequest="100"/>
        <Label Text="{Binding DisplayName}" FontSize="Large"/>
        <Label Text="{Binding AuthorNpub}" FontSize="Small"/>
        <!-- Add other details as needed -->
        <Button Text="Close" Clicked="OnCloseClicked"/>
    </StackLayout>
</ContentPage>
